<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="br.com.seasonpessoal.fakegranapp.activity.main.PostDetalhesActivity">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="10dp">
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:text="Criador"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentStart="true"
				android:id="@+id/post_detalhes_criador"
				android:textAppearance="@style/TextAppearance.AppCompat"
				android:textSize="18dp"
			/>
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:srcCompat="@null"
				android:id="@+id/post_detalhes_imagem"
				android:scaleType="fitXY"
				android:layout_below="@+id/post_detalhes_criador"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="10dp"/>
			<TextView
				android:text="descricao"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/post_detalhes_imagem"
				android:layout_centerHorizontal="true"
				android:id="@+id/post_detalhes_descricao"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:layout_marginTop="15dp"/>
		</RelativeLayout>
	</ScrollView>
</RelativeLayout>
