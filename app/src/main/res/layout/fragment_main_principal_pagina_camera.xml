<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/fragment_main_principal_pagina_camera_layout"
>

	<ScrollView android:layout_width="match_parent"
		android:layout_height="match_parent">
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/main_principal_pagina_camera_conteudo_layout">
			<ImageView
				android:id="@+id/main_principal_pagina_camera_preview"
				android:layout_width="200dp"
				android:layout_height="200dp"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="20dp"/>
			<EditText
				android:minWidth="300dp"
				android:layout_marginTop="15dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="textMultiLine|textLongMessage"
				android:ems="8"
				android:id="@+id/main_principal_pagina_foto_descricao"
				android:layout_below="@id/main_principal_pagina_camera_preview"
				android:layout_centerHorizontal="true"/>

			<ImageView
				android:onClick="enviarPost"
				app:srcCompat="@drawable/icon_check"
				android:minWidth="300dp"
				android:layout_marginTop="30dp"
				android:layout_width="70dp"
				android:layout_height="70dp"
				android:id="@+id/main_principal_pagina_foto_botao"
				android:layout_below="@id/main_principal_pagina_foto_descricao"
				android:layout_centerHorizontal="true"
				android:background="@drawable/rounded_shape_branco"
				android:padding="10dp"/>

		</RelativeLayout>
	</ScrollView>


</RelativeLayout>
